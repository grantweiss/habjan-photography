<div class="pad-top container">
  <p id="notice"><%= notice %></p>

  <h1>Images</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Thumbnail</th>
        <th>Url</th>
        <th>Alt</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image_tag image.thumbnail, class: "img img-thumbnail", size: "150x150" %></td>
          <td><%= link_to image.url, image.url %></td>
          <td><%= image.alt %></td>
          <td><%= link_to 'Show', image %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Image', new_image_path, class: "btn btn-success" %>
</div>