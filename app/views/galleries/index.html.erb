<div class="pad-top container">
  <p id="notice"><%= notice %></p>

  <h1>Galleries</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Header</th>
        <th>Thumbnail</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @galleries.each do |gallery| %>
        <tr>
          <td><%= gallery.name %></td>
          <td><%= gallery.header %></td>
          <td><%= gallery.thumbnail %></td>
          <td><%= link_to 'Show', gallery %></td>
          <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
          <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Gallery', new_gallery_path %>
</div>