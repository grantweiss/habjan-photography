<div class="no-pad image-text">
    <%= image_tag("https://s3.us-east-2.amazonaws.com/habjan-photography-images/background_final.png", :alt => "Habjan Photography", class: "img-fluid my-img") %>
</div>

<!-- Start My Work section -->
<div class="col-lg-12">
  <h1 id="gallery" class="page-header text-center txt-style">My Work</h1>
</div>

<div class="container card-fluid align-items-center mx-auto">
 <!-- Projects Row -->
    <div class="row">
      <% @galleries.each do |gallery|%>
      <div class="col-sm-6 col-lg-3">
      <a href="<%= url_for gallery %>"> 
        <div class="card marg-top grow">
          <%= image_tag gallery.thumbnail, class: "card-img-top", height: "200" %>
          <div class="card-img-overlay">
            <h3 class="card-title custom-overlay text-center"><%= gallery.name %></h3>
          </div>
        </div>
        </a>
      </div>
      <% end %>
    </div>
</div>
  <!-- /.row -->
<div class="bio">
  <%= render 'layouts/bio'%>
</div>

<!-- start footer -->
<footer class="text-muted">
  <div class="container">
    <div class="row">
      <div class="card-fluid align-items-center mx-auto" style="width: 20rem;">
        <div class="card-block text-center">
          <h1 class="card-title txt-style">Contact me</h1>
          <p class="card-text name2">Chris Habjan Photography</p>
          <ul class="list-inline">
            <li class="list-inline-item"><a href="https://www.instagram.com/lost.exposure/" target="_blank"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a></li>
            <li class="list-inline-item"><a href="https://www.facebook.com/chrishabjanphotography/" target="_blank"><i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i></a></li>
          </ul>
          <p class="card-text"><%= mail_to "chrishabjan@gmail.com"  %></p>
        </div>
      </div>
    </div>
    <p>
      <span class="float-left copy-right">&copy; 2017 Chris Habjan</span>
    </p>
  </div>
</footer>
