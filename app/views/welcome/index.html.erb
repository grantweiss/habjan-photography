<div class="no-pad image-text">
    <%= image_tag("cityCopy.png", :alt => "Habjan Photography", class: "img-fluid") %>
</div>


<div class="container">
    <div class="col-lg-12">
        <h1 class="page-header text-center txt-style">My Work</h1>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <% @gallery_photos.in_groups_of(4).each_with_index do |photos, number| %>
          <div class="row" %>
            <% photos.compact.each do |photo| %>
              <a href="<%= path_to_image(photo[:image]) %>" data-toggle="lightbox" data-gallery="example-gallery" class="col-6 col-md-3">
                <%= image_tag(photo[:thumbnail], :alt => photo[:alt], class: "img-fluid img-thumbnail") %>
              </a>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
</div>


<footer class="text-muted">
  <div class="container">
    <div class="row">
      <div class="card-fluid align-items-center mx-auto" style="width: 20rem;">
        <div class="card-block text-center">
          <h1 class="card-title txt-style">Contact me</h1>
          <p class="card-text name2">Chris Habjan Photography</p>
          <ul class="list-inline">
            <li class="list-inline-item"><a href="https://www.instagram.com/lost.exposure/" target="_blank"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a></li>
            <li class="list-inline-item"><a href="https://www.facebook.com/chrishabjanphotography/" target="_blank"><i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i></a></li>
          </ul>
          <p class="card-text"><%= mail_to "chrishabjan@gmail.com"  %></p>
        </div>
      </div>
    </div>
    <p>
      <span class="float-left copy-right">&copy; 2017 Chris Habjan</span>
    </p>
  </div>
</footer>